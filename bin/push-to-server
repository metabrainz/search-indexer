#!/bin/sh
set -e

HOST="$1"
COMMAND="$2"
SSH="ssh -i $HOME/.ssh/push-to-server_id -o IdentitiesOnly=yes"

case "$2" in
	sync)
                $SSH $HOST sync 
                tar cvO - /home/search/data/new | nc $HOST 7000
		;;
	rotate)
		$SSH $HOST rotate
		;;
	restart)
		$SSH $HOST restart
		;;
	*)
		echo "Unknown action in $0" >&2
		exit 1
		;;
esac

# eof
